{
  "ignorePatterns": ["build/**", "src/**"],
  "env": {
      "browser": true,
      "node": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
  ],
  "rules": {
      "indent": ["error", 4, {
        "SwitchCase": 1
      }],
      "linebreak-style": ["error", "unix"],
      "no-constant-condition": ["error", {
        "checkLoops": false
      }],
      "quotes": ["error", "double",
          {
            "allowTemplateLiterals": false,
            "avoidEscape": true
          }
      ],
      "semi": ["error", "never"],
      "no-console": ["error", { "allow": ["warn", "error", "info", "debug"] }],
      "no-trailing-spaces": "error",
      "eol-last": "error"
  }
}
